<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/linearbg2"
        app:cardCornerRadius="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



            <TextView
                android:id="@+id/productname"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cus"
                android:text="Cute Dog for sale"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.615" />
            <TextView
                android:id="@+id/price4"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/productname"
                app:layout_constraintTop_toTopOf="@+id/productname" />

            <TextView
                android:id="@+id/price"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="Nrs 5000"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/price4"
                app:layout_constraintTop_toTopOf="@+id/price4" />

            <TextView
                android:id="@+id/price7"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="5000"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/price"
                app:layout_constraintTop_toTopOf="@+id/price" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>